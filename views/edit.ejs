<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New <%= blog.titile %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[titile]" value="<%= blog.titile %>" required>
        </div>    
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div> 
        <div class="field">
            <label>Content</label>
            <textarea name="blog[body]" required rows="4"><%= blog.body %> </textarea>
        </div>
    <input class="ui green big inverted button" type="submit">
    </form> 
    
</div>
<% include ./partials/footer %>